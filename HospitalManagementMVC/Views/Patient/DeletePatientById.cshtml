@model CommonLayer.Model.PatientModel

@{
    ViewData["Title"] = "DeletePatientById";
}

<style>
    body {
        background-color: #f8f9fa; /* Light background color */
        font-family: Arial, sans-serif; /* Font family */
    }

    h1, h3 {
        color: #dc3545; /* Bootstrap danger color for warnings */
        text-align: center; /* Center align headings */
    }

    .details-container {
        background-color: white;
        border: 1px solid #dee2e6;
        border-radius: 5px;
        padding: 20px;
        margin: 20px auto;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        max-width: 600px; /* Center the container with a fixed width */
    }

    dl.row dt {
        font-weight: bold;
        color: #333;
    }

    dl.row dd {
        margin-bottom: 10px;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        margin-right: 10px;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    a.btn-back {
        color: #007bff; /* Bootstrap primary color for links */
        text-decoration: none;
        margin-left: 10px;
    }

        a.btn-back:hover {
            text-decoration: underline;
        }
</style>

<div class="details-container">
    <h1>DeletePatientById</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>PatientModel</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Age)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Gender)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Diagnosis)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Diagnosis)
            </dd>
        </dl>

        <form asp-action="DeletePatientById">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="GetAllPatientDetails" class="btn-back">Back to List</a>
        </form>
    </div>
</div>
